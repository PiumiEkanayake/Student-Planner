<!--            android:id="@+id/floatingCalendarBtn"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:clickable="true"-->
<!--            android:tint="@color/white"-->
<!--            app:backgroundTint="?android:attr/colorSecondary"-->
