<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddSubjectFragment"
    android:orientation="vertical"

    android:clipToPadding="false">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bottom_nav_bg"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subject_add_title"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="0dp"

        >
        <ImageView
            android:id="@+id/subjectimg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:src="@drawable/subject"
            android:alpha="0.8"
            android:tint="@color/lite_blue" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/subjectNameInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/subject_name_hint"
            app:hintTextAppearance="@style/floatinglabel">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
          <View
              android:layout_width="match_parent"
              android:layout_height="2dp"
              android:background="@color/lightgrey"
              android:layout_marginRight="10dp"
              android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="0dp"

        >
        <ImageView
            android:id="@+id/teacherimg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:src="@drawable/teacher"
            android:alpha="0.8"
            android:tint="@color/lite_blue" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/teacherNameInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/teacher_name_hint"
            app:hintTextAppearance="@style/floatinglabel">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
          <View
              android:layout_width="match_parent"
              android:layout_height="2dp"
              android:background="@color/lightgrey"
              android:layout_marginRight="10dp"
              android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="0dp"

        >
        <ImageView
            android:id="@+id/descriptionimg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_baseline_note_add_24"
            android:alpha="0.8"
            android:tint="@color/lite_blue" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/subjectDescriptionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:hint="@string/subject_description_hint"
            app:hintTextAppearance="@style/floatinglabel">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="textMultiLine"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
          <View
              android:layout_width="match_parent"
              android:layout_height="2dp"
              android:background="@color/lightgrey"
              android:layout_marginRight="10dp"
              android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="0dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"

            android:src="@drawable/color"
            android:alpha="0.8"
            android:tint="@color/lite_blue"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginVertical="8dp"
                android:text="@string/subject_colour_label"
                android:textColor="#A8A7A7"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subject_colour_hint"
                android:gravity="bottom"
                android:layout_marginVertical="30dp"
               />
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/colorbtn"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"

                android:background="@drawable/choosecolor"
                android:gravity="right"></Button>
        </RelativeLayout>

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:gravity="center">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/save_subject_button_label"
            android:layout_gravity="center"
            android:background="@drawable/save_btn"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"></Button>
    </LinearLayout>



</LinearLayout>