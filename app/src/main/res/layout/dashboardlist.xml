<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventlayout"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="5dp"
        android:background="#ED2424">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:tint="@color/white"
            android:src="@drawable/delete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/delete_icon"
            android:text="DELETE"
            android:textColor="#fff"
            android:textSize="13dp" />

    </RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:id="@+id/eventCard"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp"

            android:layout_marginTop="2dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingTop="5dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/homework_display_title"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/eventType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/event"
                    android:background="@drawable/dashboard_mini_icon"
                    android:paddingLeft="15dp"
                    android:paddingTop="2dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="2dp"
                    android:text="@string/Exam"
                    android:textColor="@color/blue" />



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="6dp">

                    <ImageView
                        android:id="@+id/subjectIcon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="32dp"
                        android:src="@drawable/subject"
                        android:tint="@color/white"
                        />
                    <TextView
                        android:id="@+id/sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:paddingTop="30dp"
                        android:paddingLeft="28dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/display_homework_subject"
                        android:textColor="@color/white"

                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/classIcon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_toRightOf="@id/sub"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="33dp"
                        android:src="@drawable/classroom"
                        android:tint="@color/white"
                        />
                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/classIcon"
                        android:gravity="start"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="30dp"
                        android:text="A405"
                        android:textColor="@color/white"

                        android:textSize="13dp" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/sTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="end"
                    android:paddingTop="7dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="0dp"
                    android:text="@string/start_time_val"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/eTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_below="@id/sTime"
                    android:layout_alignParentRight="true"
                    android:paddingTop="0dp"
                    android:paddingRight="15dp"
                    android:textStyle="bold"
                    android:paddingBottom="0dp"
                    android:text="@string/end_time_val"
                    android:textColor="@color/white"
                    android:textSize="16dp" />


            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</FrameLayout>